@model InventoryManager.ViewModels.AddSaleViewModel

<h1>Add Sale</h1>

<form asp-controller="Sale" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="ItemID"></label>
        <select asp-for="ItemID" asp-items="Model.Items"></select>
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input class="form-control" asp-for="Date" />
        <span asp-validation-for="Date"></span>
    </div>
    <div class="form-group">
        <label asp-for="UnitsSold"></label>
        <input class="form-control" asp-for="UnitsSold" />
        <span asp-validation-for="UnitsSold"></span>
    </div>

    <input type="submit" value="Add Sale" class="btn btn-primary" />
    <a asp-controller="Sale" asp-action="Index" class="btn btn-danger">Cancel</a>

</form>