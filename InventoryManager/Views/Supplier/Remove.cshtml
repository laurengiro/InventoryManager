@model List<InventoryManager.Models.Supplier>

<h1>@ViewBag.title</h1>

<form method="post">

    @foreach (var supplier in Model)
    {
        <input type="checkbox" name="supplierIds" id="@supplier.ID" value="@supplier.ID" />
        <label for="@supplier.ID">@supplier.Name</label>
        <br />
    }

    <input type="submit" value="Remove Selected Supplier(s)" />
</form>