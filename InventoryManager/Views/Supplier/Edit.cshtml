@model InventoryManager.ViewModels.EditSupplierViewModel

<h1>Edit @Model.Name</h1>

<form asp-controller="Supplier" asp-action="Edit" method="post">

    <input hidden asp-for="ID" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Country"></label>
        <input class="form-control" asp-for="Country" />
        <span asp-validation-for="Country"></span>
    </div>

    <input type="submit" value="Update Supplier" />
    <a asp-controller="Supplier" asp-action="Index" class="btn">Cancel</a>

</form>